{
  "name": "google-clone",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint \"src/scripts/**/*.js\" \"tests/**/*.js\"",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:html": "html-validate \"src/**/*.html\"",
    "format": "prettier --write \"src/**/*.{html,css,js}\" \"docs/**/*.md\" \"*.md\"",
    "test": "node --test",
    "coverage": "c8 npm test",
    "build": "echo \"No build step for static site\""
  },
  "devDependencies": {
    "c8": "^9.1.0",
    "eslint": "^8.57.0",
    "html-validate": "^8.18.0",
    "postcss-html": "^1.7.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^40.0.0"
  }
}
